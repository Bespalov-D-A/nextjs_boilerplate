{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./../dist/out-tsc",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["./pages/*"],
      "@widgets/*": ["./widgets/*"],
      "@features/*": ["./features/*"],
      "@entities/*": ["./entities/*"],
      "@shared/*": ["./shared/*"],
      "@root/*": ["./root/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "./next.config.mjs",
    "./next-env.d.ts",
    "./src/shared/assests/data/countries.json",
    "./src/shared/assests/data/phoneCodes.json",
    "global.d.ts"
  ]
}
